# Polymarket LMSR Bot — Example Configuration v0.5.0
# Copy to config.toml and adjust values for your deployment.
# Secrets (API keys, wallet keys) go in .env — NEVER here.

[bot]
name = "polymarket-lmsr-bot"
log_level = "info"
dry_run = true
mode = "Paper"  # "Paper" or "Live"

[strategy]
assets = ["BTC", "ETH"]
debounce_ms = 1000
min_delta_pct = 0.5

[api]
clob_base_url = "https://clob.polymarket.com"
clob_ws_url = "wss://ws-subscriptions-clob.polymarket.com/ws/market"
rpc_url = "https://polygon-rpc.com"
timeout_ms = 5000

[lmsr]
liquidity_parameter = 100.0
kelly_fraction = 0.25
min_edge = 0.02
prior_weight = "0.7"

[risk]
max_daily_loss_fraction = 0.02
max_position_size = 100.0
max_total_exposure = 500.0
min_bankroll = 50.0
circuit_breaker_losses = 5
cooldown_seconds = 1800

[rate_limits]
max_orders_per_minute = 50
max_orders_per_batch = 15
min_interval_ms = 1200

[contracts]
ctf_exchange = "0x4bFb41d5B3570DeFd03C39a9A4D8dE6Bd8B8982E"
usdce = "0x2791Bca1f2de4661ED88A30C99A7a9449Aa84174"
neg_risk_adapter = "0xC5d563A36AE78145C45a50134d48A1215220f80a"

[wallet]
hot_fraction = 0.20
min_matic_balance = 0.5
hot_alert_threshold = 0.30

[settlement]
batch_redeem_hour_utc = 4
max_gas_gwei = 35.0
tip_gwei = 30.0
max_fee_gwei = 50.0

[[markets]]
condition_id = "0x_example_btc_condition"
yes_token_id = "0x_example_btc_yes"
no_token_id = "0x_example_btc_no"
asset = "BTC"
active = true

[[markets]]
condition_id = "0x_example_eth_condition"
yes_token_id = "0x_example_eth_yes"
no_token_id = "0x_example_eth_no"
asset = "ETH"
active = true
